<section class="section">
  <div class="shots">
    <% @shots.each do |shot| %>
      <div class="shot-grid-item">
        <div class="shot-wrapper">  
    
          <%= link_to shot, class: 'shot' do %>
            <%= image_tag(shot.user_shot_url) %>
          
            <div class="shot-data">
              <h3 class="shot-title"><%= shot.title %></h3>
              <span class="shot-description"><%= truncate(shot.description, length: 68) %></span>
              <span class="shot-time"><%= time_ago_in_words(shot.created_at) %></span>
            </div>
          <% end %>

          <nav class="level shot-analytics">
            <div class="level-left"></div>
            <div class="level-right">
              <div class="level-item views data">
                <%= link_to shot do %>
                  <span class="icon"><i class="fa fa-eye"></i></span> 0
                <% end %>
              </div>
              <div class="level-item comments data">
                <%= link_to shot do %>
                  <span class='icon'><i class='fa fa-comments'></i></span> 
                  <%= shot.comments.count %>
                <% end %>
              </div>
              <div class="level-item likes data">
                <%= link_to '' do %>
                  <span class='icon'><i class='fa fa-heart'></i></span>
                  <span class='vote_count'>0</span>
                <% end %>
              </div>
            </div>  
          </nav>
        </div>
        <div class='user-data'>
          <div class='user-thumb'>
            <%= gravatar_image_tag(shot.user.email.gsub('span', 'mdeering'), alt: shot.user.name, gravatar: { size: 20 }) %>
          </div>
          <div class="user-name">
            <%= shot.user.name %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>